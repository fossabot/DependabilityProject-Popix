<?xml version="1.0" encoding="UTF-8"?>

<Context>

    <WatchedResource>WEB-INF/web.xml</WatchedResource>

    <Resource
            name="jdbc/Popix"
            auth="Container"
            type="javax.sql.DataSource"
            driverClassName="com.mysql.cj.jdbc.Driver"
            url="${env.POPIX_DB_URL}"
            username="${env.POPIX_DB_USER}"
            password="${env.POPIX_DB_PASS}"
            maxTotal="100"
            maxIdle="20"
            maxWaitMillis="10000"/>

</Context>
